pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    stages {
        stage ("clean workspace") {
            steps {
                cleanWs()
            }
        }

        stage ("Git Checkout") {
            steps {
                git branch: 'main', url: 'git \'https://github.com/Aryachaurasia23/FoodAppZomato.git''
            }
        }

        stage("Install NPM Dependencies") {
            steps {
                sh "npm install"
            }
        }

        stage ("Build Docker Image") {
            steps {
                sh "docker build -t zomato ."
            }
        }

        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker') {
                        sh "docker tag zomato arya023/zomato:latest "
                        sh "docker push arya023/zomato:latest "
                    }
                }
            }
        }

        stage ("Deploy to Container") {
            steps {
                sh 'docker run -d --name zomato -p 3000:3000 arya023/zomato:latest'
            }
        }
    }
    post {
    always {
        echo 'Pipelien is finished'
        }
    }
}






